extends default

block meta
  - self.title = `Imagens de ${name === 'galeria' ? 'Dragon Ball' : name}`;
  - self.description = 'Galeria com mais de 5 mil imagens de Dragon Ball, Dragon Ball Z, Dragon Ball GT categorizadas por personagem.';

block content
  section.content
    .wrapper
      section.page-content(data-component='Gallery')
        h1= self.title
        ul.gallery-breadcrumbs.list-linear
          li Você está em
          each breadcrumb, index in breadcrumbs
            li
              a(href=breadcrumb.href)= breadcrumb.name
              if index < breadcrumbs.length - 1
                |  &ndash;
        .gallery-folders
          each dir in dirs
            a.gallery-folder(href=dir.href)
              .gallery-folder-samples
                each sample in dir.samples
                  img.gallery-folder-sample(src=sample.thumbnail, data-image=sample.image)
              .gallery-folder-name #{dir.name}
        .gallery-images
          each file in files
            a.gallery-image-link(href=file.image, data-ref='Gallery-image-open')
              img.gallery-image(src=file.thumbnail)
        .gallery-fullscreen(hidden, data-ref='Gallery-fullscreen')
          img.gallery-fullscreen-image(data-ref='Gallery-fullscreen-image')
          button.btn-primary.gallery-fullscreen-previous(type='button', data-ref='Gallery-fullscreen-previous')
